    updated_at : datetime
}

class comment {
    id : int
    content : string
    isApproved : bool
    article_id : int
    user_id : int
    created_at : datetime
    updated_at : datetime
}

class users {
    id : int
    firstname : string
    lastname : string
    email : string
    password : string
    isAuthor : bool
    isAdmin : bool
    created_at : datetime
    updated_at : datetime
}

class contact {
    id : int
    firstname : string
    lastname : string
    mail : string
    message : string
    user_id : int
    created_at : datetime
