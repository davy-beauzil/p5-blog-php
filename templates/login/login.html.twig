{% extends "base.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block navigation %}{% endblock %}

{% block main_content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-5 col-lg-6 col-xl-4 px-lg-6 my-5 px-5 align-self-center">
                <h1 class="display-4 text-center mb-3">
                    Connexion
                </h1>
                {% if errors.global %}
                    <div class="alert alert-danger" role="alert">
                        {{ errors.global }}
                    </div>
                {% endif %}

                <form action="/login" method="post" data-bitwarden-watching="1">
                    <div class="form-group mb-4">
                        <label class="form-label">
                            Adresse email
                        </label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="joe@gmail.com" {% if filler.email %}value="{{ filler.email }}"{% endif%} required>
                    </div>

                    <div class="form-group mb-4">
                        <div class="row">
                            <div class="col">
                                <label class="form-label">
                                    Mot de passe
                                </label>
                            </div>
                            <div class="col-auto">
                                <a href="#" class="form-text small text-muted">
                                    Mot de passe oublié ?
                                </a>
                            </div>
                        </div>
                        <input name="password" id="password" class="form-control" type="password" placeholder="Enter your password" required>
                    </div>

                    {% if csrf %}
                        <input type="hidden" name="_csrf" value="{{ csrf }}">
                    {% endif %}

                    <input type="submit" class="btn btn-lg w-100 btn-primary mb-3" value="Connexion">

                    <p class="text-center">
                        <small class="text-muted text-center">
                            Vous n'avez pas encore de compte ? <a href="/register">Inscrivez-vous</a>.
                        </small>
                    </p>
                    <p class="text-center">
                        <small class="text-muted text-center">
                            Revenir à <a href="#">l'accueil</a>.
                        </small>
                    </p>
                </form>
            </div>
            <div class="col-12 col-md-7 col-lg-6 col-xl-8 d-none d-lg-block">
                <div class="bg-cover h-100 min-vh-100 mt-n1 me-n3" style="
                    background-image: url('https://images.unsplash.com/photo-1614690441351-51a6cee5f6f9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1181&q=80');
                    background-repeat: no-repeat;
                    background-size: cover;">
                </div>
            </div>
        </div>
    </div>
{% endblock %}