{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block navigation %}{% endblock %}

{% block main_content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-5 col-lg-6 col-xl-4 px-lg-6 my-5 px-5 align-self-center">
                <h1 class="display-4 text-center mb-3">
                    Inscription
                </h1>
                {% if errors.global %}
                    <div class="alert alert-danger" role="alert">
                        {{ errors.global }}
                    </div>
                {% endif %}

                <form action="/register" method="post" data-bitwarden-watching="1">
                    <div class="form-group mb-4">
                        <label class="form-label">
                            Prénom
                        </label>
                        <input type="text" name="first_name" id="first_name" class="form-control {% if errors.first_name %}is-invalid{% endif %}" placeholder="Joe" required>
                        {% if errors.first_name %}
                        <div id="first_name_error" class="invalid-feedback">
                            {{ errors.first_name }}
                        </div>
                        {% endif %}
                    </div>
                    <div class="form-group mb-4">
                        <label class="form-label">
                            Nom
                        </label>
                        <input type="text" name="last_name" id="last_name" class="form-control {% if errors.last_name %}is-invalid{% endif %}" placeholder="Williams" required>
                        {% if errors.last_name %}
                            <div id="last_name_error" class="invalid-feedback">
                                {{ errors.last_name }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label">
                            Adresse email
                        </label>
                        <input type="email" name="email" id="email" class="form-control {% if errors.email %}is-invalid{% endif %}" placeholder="joe@gmail.com" required>
                        {% if errors.email %}
                            <div id="email_error" class="invalid-feedback">
                                {{ errors.email }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label">
                            Mot de passe
                        </label>
                        <input name="password" id="password" class="form-control {% if errors.password %}is-invalid{% endif %}" type="password" placeholder="Entrez votre mot de passe" required>
                        {% if errors.password %}
                            <div id="password_error" class="invalid-feedback">
                                {{ errors.password }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label">
                            Confirmation du mot de passe
                        </label>
                        <input name="password_confirmation" id="password_confirmation" class="form-control {% if errors.password_confirmation %}is-invalid{% endif %}" type="password" placeholder="Entrez à nouveau votre mot de passe" required>
                        {% if errors.password_confirmation %}
                            <div id="password_confirmation_error" class="invalid-feedback">
                                {{ errors.password_confirmation }}
                            </div>
                        {% endif %}
                    </div>

                    {% if csrf %}
                        <input type="hidden" name="_csrf" value="{{ csrf }}">
                    {% endif %}

                    <input type="submit" class="btn btn-lg w-100 btn-primary mb-3" value="Inscription">

                    <p class="text-center">
                        <small class="text-muted text-center">
                            Vous avez déjà un compte ? <a href="/login">Connectez-vous</a>.
                        </small>
                    </p>
                    <p class="text-center">
                        <small class="text-muted text-center">
                            Revenir à <a href="#">l'accueil</a>.
                        </small>
                    </p>
                </form>
            </div>
            <div class="col-12 col-md-7 col-lg-6 col-xl-8 d-none d-lg-block">
                <div class="bg-cover h-100 min-vh-100 mt-n1 me-n3" style="
                    background-image: url('https://images.unsplash.com/photo-1614690441351-51a6cee5f6f9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1181&q=80');
                    background-repeat: no-repeat;
                    background-size: cover;">
                </div>
            </div>
        </div>
    </div>






